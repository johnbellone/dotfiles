# -*- mode: sh -*-
# ~/.bash_login - executed for all shells

[ `which brew &>/dev/null` ] && HOMEBREW_PATH=$(brew --prefix)
[ ! -z $HOMEBREW_PATH ] && {
    # If the system has Homebrew installed we should attempt to start
    # using the bash-completion module.
    [ -f $HOMEBREW_PATH/etc/bash_completion] && \
        source $HOMEBREW_PATH/etc/bash_completion
}

# Source JavaScript and Ruby environments if they exist.
[ -f ~/.jsrc ] && source ~/.jsrc
[ -f ~/.rbrc ] && source ~/.rbrc

export PATH
