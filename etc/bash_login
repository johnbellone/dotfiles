# -*- mode: sh -*-
# ~/.bash_login - executed for all shells

[ ! -z $HOMEBREW_PATH ] && [ -d $HOMEBREW_PATH/opt/coreutils ] && {
    # Add GNU core utilities to PATH.
    PATH="$HOMEBREW_PATH/opt/coreutils/libexec/gnubin:$PATH"
    MANPATH="$HOMEBREW_PATH/opt/coreutils/libexec/gnuman:$MANPATH"
}

# Source JavaScript and Ruby environments if they exist.
[ -f $HOME/.jsrc ] && source $HOME/.jsrc
[ -f $HOME/.rbrc ] && source $HOME/.rbrc
[ -f $HOME/.gorc ] && source $HOME/.gorc

# Just assume that not all machines may be using the GNU coreutils.
alias ls='ls --color=auto'

export PATH MANPATH
