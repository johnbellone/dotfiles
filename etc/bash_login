# -*- mode: sh -*-
# ~/.bash_login - executed for all shells

# Add the core utilities to PATH if they are installed. This became
# a problem when we changed how/where we installed them at work.
[ -z $GNU_PATH ] || {
    PATH="$GNU_PATH/opt/coreutils/libexec/gnubin:$PATH"
    MANPATH="$GNU_PATH/opt/coreutils/libexec/gnuman:$MANPATH"
    alias ls='ls --color=auto'
}

# Source JavaScript and Ruby environments if they exist.
[ -f $HOME/.jsrc ] && source $HOME/.jsrc
[ -f $HOME/.rbrc ] && source $HOME/.rbrc
[ -f $HOME/.gorc ] && source $HOME/.gorc

### Added by the Heroku Toolbelt
[ -d /usr/local/heroku ] && PATH="/usr/local/heroku/bin:$PATH"

export PATH MANPATH
