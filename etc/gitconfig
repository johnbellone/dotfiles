	# -*- mode: gitconfig -*-
[core]
	editor = emacs -nw
	quotepath = false
	sharedRepository = all
[push]
	default = matching	
[color]
	ui = true
[color "branch"]
	current = yellow black
	local = yellow
	remote = magenta
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red reverse
	new = green reverse
	whitespace = white reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan reverse
	branch = magenta
[diff]
	renames = true
[alias]
	st = status
	d = diff
	co = checkout
	b = branch
	dfc = diff --cached
	gpr = pull --rebase
	rb = rebase
	ci = commit
	co = checkout
	br = branch
	cp = cherry-pick
	cob = checkout -b
	l = log --oneline
	lv = log --oneline --pretty
	ls = log --graph --color --pretty=\"format:%C(yellow)%h%Creset%C(green)%d%Creset %s %Cblue[%aN]%Creset %C(magenta){%cr}%Creset\"
	la = log --graph --color --pretty=\"format:%C(yellow)%h%Creset%C(green)%d%Creset %s %Cblue[%aN]%Creset %C(magenta){%cr}%Creset\" --all
	pr = pull --rebase
[grep]
	lineNumber = true
[rerere]
	enabled = true
[hub]
	protocol = https
