# -*- mode: sh -*-
# ~/.rubyrc
[ ! -z $DEBUG ] && set -x

RBENV_DIR=$HOME/.rbenv

[ ! -d $RBENV_DIR ] && return

export PATH=$RBENV_DIR/bin:$PATH

# Exit out immediately if rbenv is not in our PATH.
$(which rbenv &>/dev/null) && [ $? -ne 0 ] && return

export RBENV_PATH=$RBENV_DIR/shims
[ ! -d $RBENV_PATH ] && return

# Default to 1.9.3 but take into account versions that may
# have been set on the local machine.
export RBENV_VERSION=${RBENV_VERSION:=2.0.0-p195}

export PATH="$RBENV_PATH:$PATH"

# Setup environment and put the proper version of Ruby into
# the shims that rbenv provides.
eval "$(rbenv init -)"
rbenv shell $RBENV_VERSION
